[32m+[m[32m"""[m
[32m+[m[32mSimple Calculator Application[m
[32m+[m
[32m+[m[32mThis is the main entry point for the calculator. It provides an interactive command-line interface.[m
[32m+[m[32m"""[m
[32m+[m
[32m+[m[32mfrom calculator import add, subtract, multiply, divide[m
[32m+[m
[32m+[m
[32m+[m[32mdef display_menu():[m
[32m+[m[32m    """Display the calculator menu."""[m
[32m+[m[32m    print("\n" + "="*40)[m
[32m+[m[32m    print("         SIMPLE CALCULATOR")[m
[32m+[m[32m    print("="*40)[m
[32m+[m[32m    print("1. Add")[m
[32m+[m[32m    print("2. Subtract")[m
[32m+[m[32m    print("3. Multiply")[m
[32m+[m[32m    print("4. Divide")[m
[32m+[m[32m    print("5. Exit")[m
[32m+[m[32m    print("="*40)[m
[32m+[m
[32m+[m
[32m+[m[32mdef main():[m
[32m+[m[32m    """Main function to run the calculator."""[m
[32m+[m[32m    print("Welcome to the Simple Calculator!")[m
[32m+[m[41m    [m
[32m+[m[32m    while True:[m
[32m+[m[32m        display_menu()[m
[32m+[m[32m        choice = input("Enter your choice (1-5): ").strip()[m
[32m+[m[41m        [m
[32m+[m[32m        if choice == "5":[m
[32m+[m[32m            print("Thank you for using the calculator. Goodbye!")[m
[32m+[m[32m            break[m
[32m+[m[41m        [m
[32m+[m[32m        if choice not in ["1", "2", "3", "4"]:[m
[32m+[m[32m            print("Invalid choice. Please select 1-5.")[m
[32m+[m[32m            continue[m
[32m+[m[41m        [m
[32m+[m[32m        try:[m
[32m+[m[32m            num1 = float(input("Enter first number: "))[m
[32m+[m[32m            num2 = float(input("Enter second number: "))[m
[32m+[m[41m            [m
[32m+[m[32m            if choice == "1":[m
[32m+[m[32m                result = add(num1, num2)[m
[32m+[m[32m                print(f"\n{num1} + {num2} = {result}")[m
[32m+[m[32m            elif choice == "2":[m
[32m+[m[32m                result = subtract(num1, num2)[m
[32m+[m[32m                print(f"\n{num1} - {num2} = {result}")[m
[32m+[m[32m            elif choice == "3":[m
[32m+[m[32m                result = multiply(num1, num2)[m
[32m+[m[32m                print(f"\n{num1} ร {num2} = {result}")[m
[32m+[m[32m            elif choice == "4":[m
[32m+[m[32m                result = divide(num1, num2)[m
[32m+[m[32m                print(f"\n{num1} รท {num2} = {result}")[m
[32m+[m[41m        [m
[32m+[m[32m        except ValueError as e:[m
[32m+[m[32m            print(f"Error: {e}")[m
[32m+[m[32m        except ValueError:[m
[32m+[m[32m            print("Error: Please enter valid numbers.")[m
[32m+[m
[32m+[m
[32m+[m[32mif __name__ == "__main__":[m
[32m+[m[32m    main()[m
