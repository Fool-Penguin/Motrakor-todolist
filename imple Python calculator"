[32m+[m[32m"""[m
[32m+[m[32mSimple Calculator Module[m
[32m+[m
[32m+[m[32mThis module provides basic arithmetic operations: add, subtract, multiply, and divide.[m
[32m+[m[32m"""[m
[32m+[m
[32m+[m
[32m+[m[32mdef add(a, b):[m
[32m+[m[32m    """Add two numbers and return the result.[m
[32m+[m[41m    [m
[32m+[m[32m    Args:[m
[32m+[m[32m        a: First number[m
[32m+[m[32m        b: Second number[m
[32m+[m[41m    [m
[32m+[m[32m    Returns:[m
[32m+[m[32m        The sum of a and b[m
[32m+[m[32m    """[m
[32m+[m[32m    return a + b[m
[32m+[m
[32m+[m
[32m+[m[32mdef subtract(a, b):[m
[32m+[m[32m    """Subtract two numbers and return the result.[m
[32m+[m[41m    [m
[32m+[m[32m    Args:[m
[32m+[m[32m        a: First number[m
[32m+[m[32m        b: Second number to subtract from a[m
[32m+[m[41m    [m
[32m+[m[32m    Returns:[m
[32m+[m[32m        The difference (a - b)[m
[32m+[m[32m    """[m
[32m+[m[32m    return a - b[m
[32m+[m
[32m+[m
[32m+[m[32mdef multiply(a, b):[m
[32m+[m[32m    """Multiply two numbers and return the result.[m
[32m+[m[41m    [m
[32m+[m[32m    Args:[m
[32m+[m[32m        a: First number[m
[32m+[m[32m        b: Second number[m
[32m+[m[41m    [m
[32m+[m[32m    Returns:[m
[32m+[m[32m        The product of a and b[m
[32m+[m[32m    """[m
[32m+[m[32m    return a * b[m
[32m+[m
[32m+[m
[32m+[m[32mdef divide(a, b):[m
[32m+[m[32m    """Divide two numbers and return the result.[m
[32m+[m[41m    [m
[32m+[m[32m    Args:[m
[32m+[m[32m        a: Dividend (numerator)[m
[32m+[m[32m        b: Divisor (denominator)[m
[32m+[m[41m    [m
[32m+[m[32m    Returns:[m
[32m+[m[32m        The quotient (a / b)[m
[32m+[m[41m    [m
[32m+[m[32m    Raises:[m
[32m+[m[32m        ValueError: If b is zero (division by zero)[m
[32m+[m[32m    """[m
[32m+[m[32m    if b == 0:[m
[32m+[m[32m        raise ValueError("Cannot divide by zero")[m
[32m+[m[32m    return a / b[m
